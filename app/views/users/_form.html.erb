<%= form_for @user, html: {role: 'form'} do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: 'Enter a username', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: 'human@example.com', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :tagline %>
    <%= f.text_area :tagline, rows: 3, placeholder: "Sum yourself up here", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Enter a password', class: 'form-control' %>
  </div>
  <br/>
    <%= f.submit @user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-success btn-block' %>
<% end %>