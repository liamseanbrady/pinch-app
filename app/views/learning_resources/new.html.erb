<div class="col-md-6 col-md-offset-3">
  <%= render 'shared/header', title: "New Resource for '#{@goal.title}'"  %>
  <%= render 'shared/errors', obj: @learning_resource %>
  <%= form_for [@goal, @learning_resource] do |f| %>
    <div class="form-group">
      <%= f.label :url, class: 'sr-only' %>
      <%= f.text_field :url, placeholder: 'URL for the resource', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :summary, class: 'sr-only' %>
      <%= f.text_area :summary, rows: 3, placeholder: 'A brief summary of what it includes', class: 'form-control' %>
    </div>
    <br/>
    <%= f.submit @learning_resource.new_record? ? 'Add Resource' : 'Update', class: 'btn btn-success btn-block' %>
  <% end %>  
</div>