<%= render 'shared/header', title: 'All Goals' %>

<% @goals.each do |goal| %>
  <ul>
    <li>Category: <%= goal.category.name %></li>
    <li>This goal is <%= goal.visibility %></li>
    <li><%= goal.title %></li>
    <li><%= goal.description %></li>
    <li>Created by: <%= goal.creator.username %></li>
  </ul>

  <h4>Resources</h4>
  <ul>
    <% goal.learning_resources.each do |resource| %>
      <li><%= resource.summary %></li>
      <li><%= resource.url %></li>
    <% end %>
  </ul>

  <h4>Users who have pinched this Goal</h4>
  <ul>
    <% goal.pinchers.each do |user| %>
      <li><%= user.username %></li>
    <% end %>
  </ul>
  <br/>
  <%= link_to 'View Goal', goal_path(goal) %> |
  <%= link_to 'Edit', edit_goal_path(goal) %> |
  <%= link_to 'Pinch', pinch_goal_path(goal), method: 'post' %> |
  <%= link_to 'Add Resource', new_goal_learning_resource_path(goal) %>
  <br/>
  <hr>
  <br/>
<% end %>