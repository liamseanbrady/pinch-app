<%= render 'shared/header', title: 'Create a New Goal' %>

<%= form_for @goal do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>
  <%= f.label :public, 'Public' %>
  <%= radio_button_tag 'goal[public]', "true" %>
  <%= f.label :public, 'Private' %>
  <%= radio_button_tag 'goal[public]', "false" %>
  <br/>
  <%= f.submit 'Create Goal' %>
<% end %>