<%= render 'shared/header', title: 'Create a New Goal' %>

<%= render 'shared/errors', obj: @goal %>

<%= form_for @goal do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 4 %>
  <br/>
  <%= f.label :public, 'Public' %>
  <%= radio_button_tag 'goal[visibility]', "true" %>
  <%= f.label :public, 'Private' %>
  <%= radio_button_tag 'goal[visibility]', "false", true %>
  <br/>
  <%= f.submit 'Create Goal' %>
<% end %>