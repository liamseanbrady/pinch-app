<%= render 'shared/header', title: 'Create a New Goal' %>

<% if @goal.errors.any? %>
  <ul>
    <% @goal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @goal do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 4 %>
  <br/>
  <%= f.label :public, 'Public' %>
  <%= radio_button_tag 'goal[public]', "true" %>
  <%= f.label :public, 'Private' %>
  <%= radio_button_tag 'goal[public]', "false", true %>
  <br/>
  <%= f.submit 'Create Goal' %>
<% end %>