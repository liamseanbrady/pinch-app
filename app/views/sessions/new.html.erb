<%= render 'shared/header', title: 'Log in' %>

<%= form_tag '/login' do %>
  <%= label_tag :username %>
  <%= text_field_tag :username, params[:username] || '' %>
  <br/>
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] || '' %>
  <br/>
  <%= label_tag :tagline %>
  <%= text_area_tag :tagline, params[:tagline] || '', rows: 3 %>
  <br/>
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:password] || '' %>
  <br/>
  <%= submit_tag 'Log in' %>
<% end %>